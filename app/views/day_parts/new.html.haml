%li.list-group-item
  %a.btn.btn-default.btn-block{:href => manage_day_parts_url(:location_id => @location.id)}
    = "Back"

%li.list-group-item
  %h4= "#{@brand.name} > #{@location.name}"
  %h5= "Add Day Part"

%li.list-group-item
  = render partial: "errMsg", locals: { errMsg: @errMsg }

  = form_for(:day_part, url: location_day_parts_path(@location), method: :post, :html => {:class => "form-horizontal"}) do |f|
    = f.text_field :name, :placeholder => "Name", :class => "form-control"
    %br
    = f.hidden_field "brand_id", value: @brand.id.to_s
    = f.submit "Submit", :class => "btn btn-default"
